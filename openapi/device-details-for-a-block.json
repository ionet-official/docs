          {
            "name": "device_id",
            "in": "path",
            "description": "The unique identifier for your device.",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "name": "block_id",
            "in": "path",
            "description": "The unique identifier for a specific block.",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
