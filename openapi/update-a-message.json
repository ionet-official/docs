  "paths": {
    "/api/r2r/v3/conversations/{id}/messages/{message_id}": {
      "post": {
        "summary": "Update message in conversation",
        "description": "Update an existing message in a conversation. This endpoint updates the content of an existing message in a conversation.",
        "operationId": "update-a-message",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the conversation",
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "required": true
          },
          {
            "name": "message_id",
            "in": "path",
            "description": "The ID of the message to update",
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "The new content for the message"
                  },
                  "metadata": {
                    "type": "array",
                    "description": "Additional metadata for the message metadata"
                  }
                }
              }
            }
          }
        },
        "responses": {
